<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main_activity"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.yudistudios.foodordering.ui.activities.main.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_foodDetailFragment"
            app:destination="@id/foodDetailFragment"
            app:enterAnim="@anim/comes_from_bottom" />
        <action
            android:id="@+id/action_homeFragment_to_listOrdersFragment"
            app:destination="@id/listOrdersFragment" />
    </fragment>
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.yudistudios.foodordering.ui.activities.main.fragments.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" />
    <fragment
        android:id="@+id/supportFragment"
        android:name="com.yudistudios.foodordering.ui.activities.main.fragments.SupportFragment"
        android:label="fragment_support"
        tools:layout="@layout/fragment_support" />
    <fragment
        android:id="@+id/foodDetailFragment"
        android:name="com.yudistudios.foodordering.ui.activities.main.fragments.FoodDetailFragment"
        android:label="FoodDetailFragment"
        tools:layout="@layout/fragment_food_detail">
        <argument
            android:name="food"
            app:argType="com.yudistudios.foodordering.models.Food" />
    </fragment>
    <fragment
        android:id="@+id/listOrdersFragment"
        android:name="com.yudistudios.foodordering.ui.activities.main.fragments.ListOrdersFragment"
        android:label="ListOrdersFragment"
        tools:layout="@layout/fragment_list_orders">
        <action
            android:id="@+id/action_listOrdersFragment_to_activeOrderFragment"
            app:destination="@id/activeOrderFragment" />
    </fragment>
    <fragment
        android:id="@+id/activeOrderFragment"
        android:name="com.yudistudios.foodordering.ui.activities.main.fragments.ActiveOrderFragment"
        android:label="ActiveOrderFragment"
        tools:layout="@layout/fragment_active_order">
        <argument
            android:name="order"
            app:argType="com.yudistudios.foodordering.models.Order" />
    </fragment>
</navigation>